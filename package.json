{
	"name": "forbetra",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "prisma generate && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo '' && husky install || true",
		"postinstall": "prisma generate",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"sync:clerk": "npx tsx scripts/sync-clerk-db.ts",
		"delete:test-users": "npx tsx scripts/delete-test-users.ts",
		"seed:test-data": "npx tsx scripts/seed-test-data.ts",
		"seed:comprehensive": "npx tsx scripts/seed-comprehensive.ts",
		"seed:clean": "npx tsx scripts/clean-seed-data.ts",
		"insights:backfill": "npx tsx scripts/backfill-insights.ts",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.38.0",
		"@sveltejs/adapter-vercel": "^6.0.0",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.14",
		"@testing-library/svelte": "^5.3.1",
		"@types/node": "^24",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"husky": "^8.0.3",
		"jsdom": "^28.1.0",
		"lint-staged": "^16.2.7",
		"patch-package": "^8.0.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"prisma": "^6.19.0",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.14",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.1",
		"vite": "^7.1.10",
		"vitest": "^4.0.18"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.74.0",
		"@fontsource/geist-mono": "^5.2.7",
		"@fontsource/geist-sans": "^5.2.5",
		"@prisma/client": "^6.19.0",
		"@sendgrid/mail": "^8.1.6",
		"@sentry/sveltekit": "^10.40.0",
		"chart.js": "^4.4.0",
		"lucide-svelte": "^0.575.0",
		"postmark": "^4.0.5",
		"svelte-clerk": "^0.17.8",
		"svix": "^1.81.0",
		"twilio": "^5.10.4",
		"zod": "^4.1.12"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"prettier --write",
			"eslint --fix"
		],
		"*.{json,md,css,html}": [
			"prettier --write"
		]
	}
}
